<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aguiberteaut.bancofinal.fragmentos.LoginFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:id="@+id/tvUsuario"
        android:text="Usuario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvUsuario"
        android:layout_marginTop="29dp"
        android:id="@+id/etUsuarioLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Introduce tu usuario" />

    <TextView
        android:text="Contrase침a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/tvContrase침a"
        android:layout_below="@+id/etUsuarioLogin"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/etPasswordLogin"
        android:inputType="textPassword"
        android:hint="Introduce tu contrase침a"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btLogin"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/etPasswordLogin"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btLogin"
        android:layout_alignStart="@+id/btLogin"
        android:layout_marginTop="41dp"
        android:id="@+id/btRegistroLogin" />

    <TextView
        android:text="칩"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/tvO" />
</RelativeLayout>
